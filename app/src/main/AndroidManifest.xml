<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.encryptedchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.encryptedchat.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.encryptedchat.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.example.encryptedchat.Main2Activity"
            android:label="@string/title_activity_main2" >
        </activity>
        <activity
            android:name="com.example.encryptedchat.Blank"
            android:label="@string/title_activity_blank" >
        </activity>
        <activity
            android:name="com.example.encryptedchat.CriminalPosseList"
            android:label="@string/title_activity_criminal_posse_list" >
        </activity>
        <activity
            android:name="com.example.encryptedchat.IllegalDealingsView"
            android:label="@string/title_activity_illegal_dealings_view" >
        </activity>
        <activity
            android:name="com.example.encryptedchat.IllegalDealing"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_illegal_dealing" >
        </activity>
    </application>

</manifest>
